<?xml version="1.0" encoding="UTF-8"?>
<action-map xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../../../ofbiz-smart-framework/src/main/resources/META-INF/action-map.xsd">
	
	<action uri="/index" process-type="uriAuto"  nav-tag="home" method="all">
		<response layout="/layout/layout.jsp" />
	</action>
	
	<action uri="/owner/findOwners" process-type="uriAuto"  nav-tag="owner">
	</action>

	<action uri="/owner/findOwners_with_layout" process-type="uriAuto"  nav-tag="owner">
		<page-title>findOwners_with_layout</page-title>
		<more-css>/css/abc/1.css,/css/abc/2.css</more-css>
		<more-javascripts>/js/2.js,/js/3.js</more-javascripts>
		<response layout="/layout/layout.jsp" />
	</action>
	
	<action uri="/owner/find" process-type="uriAuto" nav-tag="owner">
		<page-title>查找宠物主人</page-title>
		<response layout="/layout/layout.jsp"/>
	</action>
	
	<action uri="/owner/**" process-type="entityAuto"  nav-tag="owner">
		<response layout="/layout/layout.jsp"/>
	</action>
	
	<action uri="/pet/create" process-type="entityAuto"  nav-tag="pet">
		<service-call service-name="entityAuto#findById" 
		              entity-name="org.huihoo.samples.petclinic.model.Owner"
		              result-name="owner" 
		              param-pairs="id,requestScope.ownerId"/>
		<service-call service-name="entityAuto#findListByAnd" 
		              entity-name="org.huihoo.samples.petclinic.model.PetType"
		              result-name="petTypes" />		              
		<response layout="/layout/layout.jsp"/>
	</action>
	
	<action uri="/pet/save" process-type="entityAuto" method="post">
		<response view-type="redirect" view-name="/owner/view?id={model.owner.id}"/>
	</action>
	
	<action uri="/pet/update" process-type="entityAuto" method="post">
		<response view-type="redirect" view-name="/owner/view?id={model.owner.id}"/>
	</action>
	
	<action uri="/pet/**" process-type="entityAuto"  nav-tag="pet">
		<response layout="/layout/layout.jsp"/>
	</action>
	
	<action uri="/visit/create" process-type="entityAuto"  nav-tag="visit">
		<service-call service-name="entityAuto#findById" 
		              entity-name="org.huihoo.samples.petclinic.model.Pet"
		              result-name="pet" 
		              param-pairs="id,requestScope.petId"/>
		<response layout="/layout/layout.jsp"/>
	</action>
	
	<action uri="/visit/save" process-type="entityAuto" method="post">
		<response view-type="redirect" view-name="/owner/view?id={model.pet.owner.id}"/>
	</action>
	
	<action uri="/visit/**" process-type="entityAuto"  nav-tag="visit">
		<response layout="/layout/layout.jsp"/>
	</action>
	
	
	
	
	<action uri="/vet/list" process-type="entityAuto"  nav-tag="vet">
		<response layout="/layout/layout.jsp"/>
	</action>
</action-map>
