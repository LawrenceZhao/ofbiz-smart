<?xml version="1.0" encoding="UTF-8"?>
<action-map xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.huihoo.com/dtds/action-map.xsd">
	<app-name>OFBiz Smart Test</app-name>
	<!-- 加载其它配置文件，多个以逗号隔开 -->
	<include-action-file>/action-map-example.xml</include-action-file>
	<!-- 当前环境 develop(开发) production(生产) -->
	<env-mode>develop</env-mode>
	<!-- 领域模型的根包 -->
	<model-base-package>entity</model-base-package>
	<!-- JSP页面所在跟路径 -->
	<jsp-view-base-path>/WEB-INF/jsp</jsp-view-base-path>
	<!-- 服务器上传文件时相对当前环境运行时的相对路径 -->
	<upload-relative-path>/upload</upload-relative-path>

	<!-- 如果项目中需要使用一些配置文件，可以指定配置文件的路径(在classpath下)，在框架的上下文中直接读取 -->
	<config-properties-file>/config.properties</config-properties-file>


</action-map>